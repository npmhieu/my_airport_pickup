{% extends "admin/admin_master_template.html.twig" %}

{% block custom_style %}
    {{ parent() }}
    <link rel="stylesheet" href="/admin/css/booking.css">

{% endblock %}

{% block custom_scripts %}

    {{ parent() }}

    <script src="/admin/js/booking.js"></script>

{% endblock %}

{% block main_content %}

    <div class="col-12">

        <div class="card">

            <div class="card-header">
                Edit Booking
            </div>

            <div class="card-body">

                {% if user is defined %}

                    <div class="form-row mb-3">
                        <label class="col-md-2 col-form-label">User fullname</label>
                        <label class="col-md-10 form-control" readonly>{{ user.fullname }}</label>
                    </div>
                    <div class="form-row mb-3">
                        <label class="col-md-2 col-form-label">User phone</label>
                        <label class="col-md-10 form-control" readonly="">{{ user.phone }}</label>
                    </div>
                    <div class="form-row mb-3">
                        <label class="col-md-2 col-form-label">User email</label>
                        <label class="col-md-10 form-control" readonly>{{ user.email }}</label>
                    </div>

                {% endif %}

                {{ form_start(bookingForm) }}

                <div class="form-row mb-3">
                    {{ form_label(bookingForm.fromAirport) }}
                    {{ form_widget(bookingForm.fromAirport) }}
                </div>
                <div class="form-row mb-3">
                    {{ form_label(bookingForm.toDestination) }}
                    {{ form_widget(bookingForm.toDestination) }}
                </div>

                <div class="form-row mb-3">
                    {{ form_label(bookingForm.arriveDate) }}
                    {{ form_widget(bookingForm.arriveDate) }}
                </div>

                <div class="form-row mb-3">
                    {{ form_label(bookingForm.numberPassengers) }}
                    {{ form_widget(bookingForm.numberPassengers) }}
                </div>

                <div class="form-row mb-3">
                    {{ form_label(bookingForm.numberLuggages) }}
                    {{ form_widget(bookingForm.numberLuggages) }}
                </div>

                <div class="form-row mb-3">
                    {{ form_label(bookingForm.numberSeats) }}
                    {{ form_widget(bookingForm.numberSeats) }}
                </div>

                <div class="form-row mb-3">
                    {{ form_label(bookingForm.price) }}
                    {{ form_widget(bookingForm.price) }}
                </div>

                <div class="text-center">
                    {{ form_label(bookingForm.save) }}
                    {{ form_widget(bookingForm.save) }}

                    <a class="btn btn-secondary mt-3" href="{{ path('admin_booking_list') }}">Back to list</a>
                </div>

                {{ form_end(bookingForm) }}


            </div>

        </div>

    </div>

{% endblock %}