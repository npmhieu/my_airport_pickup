{% extends "admin/admin_master_template.html.twig" %}

{% block custom_scripts %}

    {{ parent() }}

    <script src="/admin/js/booking.js"></script>

{% endblock %}

{% block main_content %}

    <div class="col-12">

        <div class="card">

            <div class="card-header">
                Booking List
                <a class="btn btn-link" href="/create-booking">Create Booking</a>
            </div>

            <div class="card-body">

                {% for message in app.flashes('success') %}
                    <div class="alert alert-success">
                        {{ message }}
                    </div>
                {% endfor %}

                <table class="table">

                    <thead class="thead-dark"> <!-- table header -->
                        <tr> <!-- table row -->
                            <th>#</th> <!-- table head -->
                            <th>From Airport</th>
                            <th>To Destination</th>
                            <th>Arrive Date</th>
                            <th>Number Pass.</th>
                            <th>Price</th>
                            <th>Actions</th>
                        </tr>
                    </thead>

                    <tbody>

                    {% for booking in bookings %}

                        <tr>
                            <th scope="row">{{ booking.id }}</th>
                            <td>{{ booking.fromAirport }}</td>
                            <td>{{ booking.toDestination }}</td>
                            <td>{{ booking.arriveDate | date('d-m-Y H:i') }}</td>
                            <td>{{ booking.numberPassengers }}</td>
                            <td>{{ booking.price }}</td>
                            <td>
                                <a class="btn btn-primary" href="{{ path('admin_booking_edit', { bookingId: booking.id }) }}">Edit</a>

                                <a class="btn btn-danger" href="{{ path('admin_booking_delete', { bookingId: booking.id }) }}">Delete</a>
                            </td>
                        </tr>

                    {% endfor %}

                    </tbody>

                </table>

            </div>

        </div>

    </div>

{% endblock %}