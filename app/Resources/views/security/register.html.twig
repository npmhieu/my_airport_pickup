<html lang="en">
<head>
    <base href="./">
    <meta charset="utf-8">
    <meta http-equiv="X-UA-Compatible" content="IE=edge">
    <meta name="viewport" content="width=device-width, initial-scale=1.0, shrink-to-fit=no">
    <meta name="description" content="CoreUI - Open Source Bootstrap Admin Template">
    <meta name="author" content="Łukasz Holeczek">
    <meta name="keyword" content="Bootstrap,Admin,Template,Open,Source,jQuery,CSS,HTML,RWD,Dashboard">
    <title>CoreUI Free Bootstrap Admin Template</title>
    <!-- Icons-->
    <link rel="stylesheet" href="https://unpkg.com/@coreui/icons/css/free.min.css">
    <link href="https://cdnjs.cloudflare.com/ajax/libs/flag-icon-css/3.2.1/css/flag-icon.min.css" rel="stylesheet">
    <link href="https://stackpath.bootstrapcdn.com/font-awesome/4.7.0/css/font-awesome.min.css" rel="stylesheet">
    <link href="https://cdnjs.cloudflare.com/ajax/libs/simple-line-icons/2.4.1/css/simple-line-icons.min.css"
          rel="stylesheet">
    <!-- Main styles for this application-->
    <link href="admin/css/style.css" rel="stylesheet">
    <link href="admin/css/pace.min.css" rel="stylesheet">

</head>
<body class="app flex-row align-items-center">
<div class="container">
  <div class="container">
    <div class="row justify-content-center">
      <div class="col-md-6">
        <div class="card mx-4">
          <div class="card-body p-4">
            <h1>Register</h1>

              {% for message in app.flashes('error') %}
                  <div class="alert alert-danger">
                      {{ message }}
                  </div>
              {% endfor %}

            <p class="text-muted">Create your account</p>
            {{ form_start(userForm) }}

            <div class="form-row mb-3">
                {{ form_label(userForm.fullname) }}
                {{ form_widget(userForm.fullname) }}
            </div>
            <div class="form-row mb-3">
                {{ form_label(userForm.email) }}
                {{ form_widget(userForm.email) }}
            </div>

            <div class="form-row mb-3">
                {{ form_label(userForm.password) }}
                {{ form_widget(userForm.password) }}
            </div>

              <div class="form-row mb-3">
                  {{ form_label(userForm.repeatPassword) }}
                  {{ form_widget(userForm.repeatPassword) }}
              </div>

            <div class="form-row mb-3">
                {{ form_label(userForm.phone) }}
                {{ form_widget(userForm.phone) }}
            </div>


            <div class="text-center">
                {{ form_label(userForm.register) }}
                {{ form_widget(userForm.register) }}
            </div>

            {{ form_end(userForm) }}

        </div>
      </div>
    </div>
  </div>
</div>
<!-- CoreUI and necessary plugins-->
